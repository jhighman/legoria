<div class="mb-4">
  <h1 class="h3 mb-1">Add Value to <%= @lookup_type.name %></h1>
  <p class="text-muted mb-0">Create a new lookup value with translations</p>
</div>

<%= render "form", lookup_value: @lookup_value %>

<div class="mt-4">
  <%= link_to admin_lookup_type_path(@lookup_type), class: "text-decoration-none" do %>
    <i class="bi bi-arrow-left me-1"></i> Back to <%= @lookup_type.name %>
  <% end %>
</div>

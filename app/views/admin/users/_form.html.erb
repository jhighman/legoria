<%= form_with model: [:admin, user] do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <div class="d-flex">
        <i class="bi bi-exclamation-circle me-2"></i>
        <div>
          <strong>Please correct the following errors:</strong>
          <ul class="mb-0 mt-2">
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Basic Information</h5>
      <div class="row g-3 mt-2">
        <div class="col-md-6">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control", required: true %>
        </div>
        <div class="col-md-6">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", required: true %>
        </div>
        <div class="col-md-6">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Password</h5>
      <% if user.persisted? %>
        <p class="text-muted small">Leave blank to keep current password</p>
      <% end %>
      <div class="row g-3 mt-2">
        <div class="col-md-6">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: !user.persisted?, autocomplete: "new-password" %>
        </div>
        <div class="col-md-6">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", required: !user.persisted?, autocomplete: "new-password" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Roles</h5>
      <p class="text-muted small">Select the roles this user should have</p>
      <div class="mt-3">
        <% @roles.each do |role| %>
          <div class="form-check mb-2">
            <%= check_box_tag "user[role_ids][]", role.id, user.roles.include?(role), class: "form-check-input", id: "role_#{role.id}" %>
            <label class="form-check-label" for="role_<%= role.id %>">
              <strong><%= role.name.humanize %></strong>
              <% if role.description.present? %>
                <span class="text-muted">- <%= role.description %></span>
              <% end %>
            </label>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancel", admin_users_path, class: "btn btn-outline-secondary" %>
    <%= f.submit user.persisted? ? "Update User" : "Create User", class: "btn btn-primary" %>
  </div>
<% end %>

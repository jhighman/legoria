<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Lookup Tables</h1>
    <p class="text-muted mb-0">Manage dropdown values and reference data</p>
  </div>
</div>

<div class="row g-4">
  <% @lookup_types.each do |lookup_type| %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="card-title mb-1"><%= lookup_type.name %></h5>
              <p class="text-muted small mb-2"><%= lookup_type.description %></p>
            </div>
            <% if lookup_type.system_managed? %>
              <span class="badge bg-info">System</span>
            <% end %>
            <% unless lookup_type.active? %>
              <span class="badge bg-secondary">Inactive</span>
            <% end %>
          </div>
          <div class="d-flex align-items-center mt-3">
            <i class="bi bi-list-ul text-muted me-2"></i>
            <span class="text-muted">
              <%= lookup_type.lookup_values.active.count %> active value<%= lookup_type.lookup_values.active.count == 1 ? "" : "s" %>
            </span>
          </div>
          <div class="small text-muted mt-2">
            <code><%= lookup_type.code %></code>
          </div>
        </div>
        <div class="card-footer bg-light">
          <%= link_to "Manage Values", admin_lookup_type_path(lookup_type), class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @lookup_types.empty? %>
  <div class="card">
    <div class="card-body text-center py-5">
      <i class="bi bi-list-ul fs-1 text-muted d-block mb-3"></i>
      <h5>No lookup tables defined</h5>
      <p class="text-muted">Lookup tables are created automatically when the organization is set up.</p>
    </div>
  </div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1"><%= @role.name.humanize %></h1>
    <p class="text-muted mb-0"><%= @role.description %></p>
  </div>
  <% if @role.system_role? %>
    <span class="badge bg-info">System Role</span>
  <% end %>
</div>

<div class="row g-4">
  <!-- Users with this role -->
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0">Users with this role (<%= @users.count %>)</h5>
      </div>
      <% if @users.any? %>
        <ul class="list-group list-group-flush">
          <% @users.each do |user| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="d-flex align-items-center">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                  <span class="small"><%= user.first_name[0] %><%= user.last_name[0] %></span>
                </div>
                <div class="ms-3">
                  <div class="fw-medium"><%= user.display_name %></div>
                  <div class="text-muted small"><%= user.email %></div>
                </div>
              </div>
              <% unless user == current_user && @role.name == "admin" %>
                <%= button_to remove_user_admin_role_path(@role, user_id: user.id), method: :delete, class: "btn btn-sm btn-outline-danger", data: { turbo_confirm: "Remove #{user.display_name} from this role?" } do %>
                  <i class="bi bi-x"></i> Remove
                <% end %>
              <% else %>
                <span class="badge bg-secondary">You</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="card-body text-center py-5">
          <i class="bi bi-person-x fs-1 text-muted d-block mb-3"></i>
          <p class="text-muted mb-0">No users have this role yet</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Add users -->
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0">Add User</h5>
      </div>
      <div class="card-body">
        <% if @available_users.any? %>
          <%= form_with url: assign_user_admin_role_path(@role), method: :post, local: true do %>
            <div class="mb-3">
              <%= select_tag :user_id, options_from_collection_for_select(@available_users, :id, :display_name), class: "form-select", prompt: "Select a user..." %>
            </div>
            <%= submit_tag "Add to Role", class: "btn btn-primary w-100" %>
          <% end %>
        <% else %>
          <p class="text-muted text-center mb-0">All active users already have this role</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <%= link_to admin_roles_path, class: "text-decoration-none" do %>
    <i class="bi bi-arrow-left me-1"></i> Back to Roles
  <% end %>
</div>

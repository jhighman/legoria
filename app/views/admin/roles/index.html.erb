<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Roles</h1>
    <p class="text-muted mb-0">Manage roles and user assignments</p>
  </div>
</div>

<div class="row g-4">
  <% @roles.each do |role| %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="card-title mb-1"><%= role.name.humanize %></h5>
              <p class="text-muted small mb-2"><%= role.description %></p>
            </div>
            <% if role.system_role? %>
              <span class="badge bg-info">System</span>
            <% end %>
          </div>
          <div class="d-flex align-items-center mt-3">
            <i class="bi bi-people text-muted me-2"></i>
            <span class="text-muted"><%= role.users.count %> user<%= role.users.count == 1 ? "" : "s" %></span>
          </div>
        </div>
        <div class="card-footer bg-light">
          <%= link_to "Manage Users", admin_role_path(role), class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @roles.empty? %>
  <div class="card">
    <div class="card-body text-center py-5">
      <i class="bi bi-shield fs-1 text-muted d-block mb-3"></i>
      <h5>No roles defined</h5>
      <p class="text-muted">Roles are created automatically when the organization is set up.</p>
    </div>
  </div>
<% end %>

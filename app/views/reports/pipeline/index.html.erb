<% content_for :title, "Pipeline Conversion Report" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Pipeline Conversion Report</h1>
    <p class="text-muted mb-0">Stage-to-stage conversion rates and funnel analysis</p>
  </div>
  <%= render "reports/shared/export_buttons", csv_path: export_reports_pipeline_index_path(request.query_parameters) %>
</div>

<%= render "reports/shared/date_range_filter", jobs: @jobs, departments: @departments, show_filters: true %>

<!-- Funnel Visualization -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title mb-0">Hiring Funnel</h5>
  </div>
  <div class="card-body">
    <% if @data[:funnel].any? %>
      <div class="row align-items-end text-center">
        <% max_entries = @data[:funnel].map { |s| s[:entries] }.max %>
        <% @data[:funnel].each_with_index do |stage, index| %>
          <div class="col">
            <!-- Bar -->
            <div class="mx-auto mb-2" style="width: 60%; background: <%= stage[:stage_color] || '#6B7280' %>; height: <%= max_entries.positive? ? [(stage[:entries].to_f / max_entries * 200), 20].max : 20 %>px; border-radius: 4px 4px 0 0;">
            </div>

            <!-- Stage Info -->
            <div class="fw-bold"><%= stage[:entries] %></div>
            <div class="small"><%= stage[:stage_name] %></div>

            <!-- Conversion Arrow -->
            <% if index > 0 %>
              <div class="mt-2">
                <span class="badge bg-<%= stage[:conversion_from_previous] >= 50 ? 'success' : stage[:conversion_from_previous] >= 25 ? 'warning' : 'danger' %>">
                  <i class="bi bi-arrow-down me-1"></i><%= stage[:conversion_from_previous] %>%
                </span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-funnel fs-1 d-block mb-3"></i>
        <p>No pipeline data available for the selected date range</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Bottlenecks Alert -->
<% if @data[:bottlenecks].any? %>
  <div class="alert alert-warning mb-4">
    <h5 class="alert-heading">
      <i class="bi bi-exclamation-triangle me-2"></i>Potential Bottlenecks Detected
    </h5>
    <hr>
    <% @data[:bottlenecks].each do |bottleneck| %>
      <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
          <strong><%= bottleneck[:stage_name] %></strong>
          <span class="text-muted ms-2">(<%= bottleneck[:pass_through_rate] %>% vs <%= bottleneck[:avg_rate] %>% avg)</span>
        </div>
        <small class="text-muted"><%= bottleneck[:recommendation] %></small>
      </div>
    <% end %>
  </div>
<% end %>

<div class="row g-4">
  <!-- Stage Metrics -->
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Stage Metrics</h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Stage</th>
                <th class="text-end">Entries</th>
                <th class="text-end">Exits</th>
                <th class="text-end">Rejections</th>
                <th class="text-center">Pass-Through Rate</th>
                <th class="text-center">Rejection Rate</th>
                <th class="text-end">Avg Time</th>
                <th class="text-end">Current</th>
              </tr>
            </thead>
            <tbody>
              <% @data[:stage_metrics].each do |stage| %>
                <tr>
                  <td>
                    <span class="badge me-2" style="background-color: <%= @data[:funnel].find { |f| f[:stage_id] == stage[:stage_id] }&.dig(:stage_color) || '#6B7280' %>;">&nbsp;</span>
                    <%= stage[:stage_name] %>
                  </td>
                  <td class="text-end"><%= stage[:entries] %></td>
                  <td class="text-end"><%= stage[:exits] %></td>
                  <td class="text-end text-danger"><%= stage[:rejections] %></td>
                  <td class="text-center">
                    <div class="progress" style="height: 20px;">
                      <div class="progress-bar bg-success" style="width: <%= [stage[:pass_through_rate], 100].min %>%;">
                        <%= stage[:pass_through_rate] %>%
                      </div>
                    </div>
                  </td>
                  <td class="text-center">
                    <div class="progress" style="height: 20px;">
                      <div class="progress-bar bg-danger" style="width: <%= [stage[:rejection_rate], 100].min %>%;">
                        <%= stage[:rejection_rate] %>%
                      </div>
                    </div>
                  </td>
                  <td class="text-end">
                    <% if stage[:avg_time_hours] && stage[:avg_time_hours] > 0 %>
                      <% if stage[:avg_time_hours] < 24 %>
                        <%= stage[:avg_time_hours].round(1) %> hrs
                      <% elsif stage[:avg_time_hours] < 168 %>
                        <%= (stage[:avg_time_hours] / 24.0).round(1) %> days
                      <% else %>
                        <%= (stage[:avg_time_hours] / 168.0).round(1) %> wks
                      <% end %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="text-end">
                    <span class="badge bg-primary"><%= stage[:current_count] %></span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Conversion Trend -->
<div class="card mt-4">
  <div class="card-header">
    <h5 class="card-title mb-0">Weekly Conversion Trend</h5>
  </div>
  <div class="card-body">
    <% if @data[:trend].any? %>
      <div data-controller="chart"
           data-chart-type-value="line"
           data-chart-data-value="<%= {
             labels: @data[:trend].map { |t| t[:label] },
             datasets: [{
               label: 'Applications',
               data: @data[:trend].map { |t| t[:applications] },
               borderColor: '#3B82F6',
               backgroundColor: 'rgba(59, 130, 246, 0.1)',
               fill: true,
               yAxisID: 'y'
             }, {
               label: 'Hires',
               data: @data[:trend].map { |t| t[:hires] },
               borderColor: '#10B981',
               backgroundColor: 'rgba(16, 185, 129, 0.1)',
               yAxisID: 'y'
             }]
           }.to_json %>">
        <canvas data-chart-target="canvas" height="100"></canvas>
      </div>
    <% else %>
      <div class="text-center text-muted py-4">No trend data available</div>
    <% end %>
  </div>
</div>

<% content_for :title, "EEOC Compliance Report" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">EEOC Compliance Report</h1>
    <p class="text-muted mb-0">Equal Employment Opportunity demographic data</p>
  </div>
  <%= render "reports/shared/export_buttons",
        csv_path: export_reports_eeoc_index_path(request.query_parameters),
        pdf_path: pdf_reports_eeoc_index_path(request.query_parameters) %>
</div>

<div class="alert alert-info mb-4">
  <i class="bi bi-shield-lock me-2"></i>
  <strong>Privacy Protected:</strong> Groups with fewer than 5 members are shown as "< 5" to protect individual privacy.
  This data is for compliance monitoring only.
</div>

<%= render "reports/shared/date_range_filter", jobs: @jobs, departments: @departments, show_filters: true %>

<!-- Summary Cards -->
<div class="row g-4 mb-4">
  <div class="col-md-3">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-4 fw-bold text-primary"><%= @data[:summary][:total_applications] %></div>
        <div class="text-muted">Total Applications</div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-4 fw-bold text-success"><%= @data[:summary][:eeoc_responses] %></div>
        <div class="text-muted">EEOC Responses</div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-4 fw-bold text-info"><%= @data[:summary][:response_rate] %>%</div>
        <div class="text-muted">Response Rate</div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-4 fw-bold text-warning"><%= @data[:summary][:hired] %></div>
        <div class="text-muted">Hired</div>
      </div>
    </div>
  </div>
</div>

<div class="row g-4">
  <!-- Gender Distribution -->
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Gender Distribution</h5>
      </div>
      <div class="card-body">
        <% if @data[:by_gender].any? %>
          <div data-controller="chart"
               data-chart-type-value="pie"
               data-chart-data-value="<%= {
                 labels: @data[:by_gender].map { |g| g[:label] },
                 datasets: [{
                   data: @data[:by_gender].map { |g| g[:count].is_a?(Integer) ? g[:count] : 0 },
                   backgroundColor: ['#3B82F6', '#EC4899', '#8B5CF6', '#6B7280']
                 }]
               }.to_json %>">
            <canvas data-chart-target="canvas"></canvas>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">No data available</div>
        <% end %>
      </div>
      <div class="card-footer p-0">
        <table class="table table-sm mb-0">
          <thead class="table-light">
            <tr>
              <th>Gender</th>
              <th class="text-end">Count</th>
              <th class="text-end">%</th>
              <th class="text-end">Hired</th>
            </tr>
          </thead>
          <tbody>
            <% @data[:by_gender].each do |row| %>
              <tr>
                <td><%= row[:label] %></td>
                <td class="text-end"><%= row[:count] %></td>
                <td class="text-end"><%= row[:percentage] %>%</td>
                <td class="text-end"><%= row[:hired] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Race/Ethnicity Distribution -->
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Race/Ethnicity Distribution</h5>
      </div>
      <div class="card-body">
        <% if @data[:by_race_ethnicity].any? %>
          <div data-controller="chart"
               data-chart-type-value="doughnut"
               data-chart-data-value="<%= {
                 labels: @data[:by_race_ethnicity].map { |r| r[:label] },
                 datasets: [{
                   data: @data[:by_race_ethnicity].map { |r| r[:count].is_a?(Integer) ? r[:count] : 0 },
                   backgroundColor: ['#EF4444', '#F59E0B', '#10B981', '#3B82F6', '#8B5CF6', '#EC4899', '#6B7280', '#374151']
                 }]
               }.to_json %>">
            <canvas data-chart-target="canvas"></canvas>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">No data available</div>
        <% end %>
      </div>
      <div class="card-footer p-0">
        <table class="table table-sm mb-0">
          <thead class="table-light">
            <tr>
              <th>Race/Ethnicity</th>
              <th class="text-end">Count</th>
              <th class="text-end">%</th>
              <th class="text-end">Hired</th>
            </tr>
          </thead>
          <tbody>
            <% @data[:by_race_ethnicity].reject { |r| r[:count] == 0 || r[:count] == "< 5" }.each do |row| %>
              <tr>
                <td><%= row[:label] %></td>
                <td class="text-end"><%= row[:count] %></td>
                <td class="text-end"><%= row[:percentage] %>%</td>
                <td class="text-end"><%= row[:hired] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Veteran Status -->
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Veteran Status</h5>
      </div>
      <div class="card-body p-0">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Status</th>
              <th class="text-end">Count</th>
              <th class="text-end">Percentage</th>
              <th class="text-end">Hired</th>
            </tr>
          </thead>
          <tbody>
            <% @data[:by_veteran_status].each do |row| %>
              <tr>
                <td><%= row[:label] %></td>
                <td class="text-end"><%= row[:count] %></td>
                <td class="text-end"><%= row[:percentage] %>%</td>
                <td class="text-end"><%= row[:hired] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Disability Status -->
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Disability Status</h5>
      </div>
      <div class="card-body p-0">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Status</th>
              <th class="text-end">Count</th>
              <th class="text-end">Percentage</th>
              <th class="text-end">Hired</th>
            </tr>
          </thead>
          <tbody>
            <% @data[:by_disability_status].each do |row| %>
              <tr>
                <td><%= row[:label] %></td>
                <td class="text-end"><%= row[:count] %></td>
                <td class="text-end"><%= row[:percentage] %>%</td>
                <td class="text-end"><%= row[:hired] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Collection Rates -->
<div class="card mt-4">
  <div class="card-header">
    <h5 class="card-title mb-0">Data Collection Metrics</h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <div class="text-center p-3 bg-light rounded">
          <div class="h3 mb-0"><%= @data[:collection_rates][:overall_rate] %>%</div>
          <small class="text-muted">Overall Response Rate</small>
        </div>
      </div>
      <div class="col-md-4">
        <div class="text-center p-3 bg-light rounded">
          <div class="h3 mb-0"><%= @data[:collection_rates][:decline_rate] %>%</div>
          <small class="text-muted">Decline Rate</small>
        </div>
      </div>
      <div class="col-md-4">
        <h6>Collection by Context</h6>
        <% @data[:collection_rates][:by_context].each do |context| %>
          <div class="d-flex justify-content-between mb-1">
            <small><%= context[:label] %></small>
            <small><%= context[:count] %> (<%= context[:percentage] %>%)</small>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Response Rate Trend -->
<div class="card mt-4">
  <div class="card-header">
    <h5 class="card-title mb-0">Response Rate Trend</h5>
  </div>
  <div class="card-body">
    <% if @data[:trend].any? %>
      <div data-controller="chart"
           data-chart-type-value="line"
           data-chart-data-value="<%= {
             labels: @data[:trend].map { |t| t[:label] },
             datasets: [{
               label: 'Response Rate',
               data: @data[:trend].map { |t| t[:response_rate] },
               borderColor: '#3B82F6',
               backgroundColor: 'rgba(59, 130, 246, 0.1)',
               fill: true,
               yAxisID: 'y'
             }, {
               label: 'Responses',
               data: @data[:trend].map { |t| t[:responses] },
               borderColor: '#10B981',
               type: 'bar',
               yAxisID: 'y1'
             }]
           }.to_json %>">
        <canvas data-chart-target="canvas" height="100"></canvas>
      </div>
    <% else %>
      <div class="text-center text-muted py-4">No trend data available</div>
    <% end %>
  </div>
</div>

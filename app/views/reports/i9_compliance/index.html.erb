<% content_for :title, "I-9 Compliance Report" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">I-9 Compliance Report</h1>
    <p class="text-muted mb-0">Verification completion rates and compliance metrics</p>
  </div>
  <%= render "reports/shared/export_buttons", csv_path: export_reports_i9_compliance_index_path(request.query_parameters), pdf_path: pdf_reports_i9_compliance_index_path(request.query_parameters) %>
</div>

<%= render "reports/shared/date_range_filter", departments: @departments, show_filters: false %>

<!-- Summary Cards -->
<div class="row g-4 mb-4">
  <div class="col-md-2">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-6 fw-bold text-primary"><%= @data[:summary][:total_verifications] %></div>
        <div class="text-muted small">Total I-9s</div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-6 fw-bold text-success"><%= @data[:summary][:verified] %></div>
        <div class="text-muted small">Verified</div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-6 fw-bold text-warning"><%= @data[:summary][:pending] %></div>
        <div class="text-muted small">Pending</div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-6 fw-bold text-info"><%= @data[:summary][:completion_rate] %>%</div>
        <div class="text-muted small">Completion Rate</div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-6 fw-bold text-danger"><%= @data[:summary][:late_completions] %></div>
        <div class="text-muted small">Late Completions</div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="card h-100">
      <div class="card-body text-center">
        <div class="display-6 fw-bold text-secondary"><%= @data[:summary][:late_rate] %>%</div>
        <div class="text-muted small">Late Rate</div>
      </div>
    </div>
  </div>
</div>

<div class="row g-4 mb-4">
  <!-- Timing Metrics -->
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Average Processing Time</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <div class="d-flex justify-content-between">
            <span>Section 1</span>
            <strong><%= @data[:timing_metrics][:avg_section1_formatted] || "N/A" %></strong>
          </div>
        </div>
        <div class="mb-3">
          <div class="d-flex justify-content-between">
            <span>Section 2</span>
            <strong><%= @data[:timing_metrics][:avg_section2_formatted] || "N/A" %></strong>
          </div>
        </div>
        <div>
          <div class="d-flex justify-content-between">
            <span>Total</span>
            <strong><%= @data[:timing_metrics][:avg_total_formatted] || "N/A" %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Pending Deadlines -->
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Pending Deadlines</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <div class="d-flex justify-content-between">
            <span>Due Today</span>
            <span class="badge bg-danger"><%= @data[:pending_deadlines][:due_today] %></span>
          </div>
        </div>
        <div class="mb-3">
          <div class="d-flex justify-content-between">
            <span>Due This Week</span>
            <span class="badge bg-warning"><%= @data[:pending_deadlines][:due_this_week] %></span>
          </div>
        </div>
        <div>
          <div class="d-flex justify-content-between">
            <span>Due Next Week</span>
            <span class="badge bg-info"><%= @data[:pending_deadlines][:due_next_week] %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Status Distribution -->
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">Status Distribution</h5>
      </div>
      <div class="card-body">
        <% @data[:by_status].each do |status| %>
          <div class="mb-2">
            <div class="d-flex justify-content-between mb-1">
              <span><%= status[:status_label] %></span>
              <span><%= status[:count] %></span>
            </div>
            <div class="progress" style="height: 5px;">
              <div class="progress-bar" style="width: <%= @data[:summary][:total_verifications] > 0 ? (status[:count].to_f / @data[:summary][:total_verifications] * 100) : 0 %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Overdue Verifications -->
<% if @data[:overdue][:count] > 0 %>
  <div class="card mb-4 border-danger">
    <div class="card-header bg-danger text-white">
      <h5 class="card-title mb-0">Overdue Verifications (<%= @data[:overdue][:count] %>)</h5>
    </div>
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Candidate</th>
            <th>Job</th>
            <th>Deadline</th>
            <th>Days Overdue</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @data[:overdue][:verifications].each do |v| %>
            <tr>
              <td><%= v[:candidate_name] %></td>
              <td><%= v[:job_title] %></td>
              <td><%= v[:deadline].strftime("%b %d, %Y") %></td>
              <td><span class="badge bg-danger"><%= v[:days_overdue] %> days</span></td>
              <td><%= v[:status].titleize.gsub("_", " ") %></td>
              <td><%= link_to "View", admin_i9_verification_path(v[:id]), class: "btn btn-sm btn-outline-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<!-- Completion Trend Chart -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title mb-0">Completion Trend</h5>
  </div>
  <div class="card-body">
    <% if @data[:trend].any? %>
      <div data-controller="chart"
           data-chart-type-value="line"
           data-chart-data-value="<%= {
             labels: @data[:trend].map { |t| t[:label] },
             datasets: [{
               label: 'Total I-9s',
               data: @data[:trend].map { |t| t[:total] },
               borderColor: '#3B82F6',
               backgroundColor: 'rgba(59, 130, 246, 0.1)',
               fill: true
             }, {
               label: 'Verified',
               data: @data[:trend].map { |t| t[:verified] },
               borderColor: '#10B981'
             }, {
               label: 'Late',
               data: @data[:trend].map { |t| t[:late] },
               borderColor: '#EF4444'
             }]
           }.to_json %>">
        <canvas data-chart-target="canvas" height="80"></canvas>
      </div>
    <% else %>
      <div class="text-center text-muted py-5">No data available for the selected date range</div>
    <% end %>
  </div>
</div>

<!-- Department Breakdown -->
<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">By Department</h5>
  </div>
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Department</th>
          <th class="text-end">Total</th>
          <th class="text-end">Verified</th>
          <th class="text-end">Completion Rate</th>
        </tr>
      </thead>
      <tbody>
        <% @data[:by_department].each do |dept| %>
          <tr>
            <td><%= dept[:department_name] %></td>
            <td class="text-end"><%= dept[:total] %></td>
            <td class="text-end"><%= dept[:verified] %></td>
            <td class="text-end">
              <span class="badge bg-<%= dept[:completion_rate] >= 90 ? 'success' : dept[:completion_rate] >= 70 ? 'warning' : 'danger' %>">
                <%= dept[:completion_rate] %>%
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

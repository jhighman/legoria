<%= form_with model: candidate do |f| %>
  <% if candidate.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <div class="d-flex">
        <i class="bi bi-exclamation-circle me-2"></i>
        <div>
          <strong>Please correct the following errors:</strong>
          <ul class="mb-0 mt-2">
            <% candidate.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Basic Information</h5>
      <div class="row g-3 mt-2">
        <div class="col-md-6">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control", required: true %>
        </div>
        <div class="col-md-6">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", required: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Contact Information</h5>
      <div class="row g-3 mt-2">
        <div class="col-md-6">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>
        <div class="col-md-6">
          <%= f.label :phone, class: "form-label" %>
          <%= f.telephone_field :phone, class: "form-control", placeholder: "(555) 555-5555" %>
        </div>
        <div class="col-12">
          <%= f.label :location, class: "form-label" %>
          <%= f.text_field :location, class: "form-control", placeholder: "City, State" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Online Presence</h5>
      <div class="row g-3 mt-2">
        <div class="col-md-6">
          <%= f.label :linkedin_url, "LinkedIn URL", class: "form-label" %>
          <%= f.url_field :linkedin_url, class: "form-control", placeholder: "https://linkedin.com/in/username" %>
        </div>
        <div class="col-md-6">
          <%= f.label :portfolio_url, "Portfolio URL", class: "form-label" %>
          <%= f.url_field :portfolio_url, class: "form-control", placeholder: "https://portfolio.example.com" %>
        </div>
      </div>
    </div>
  </div>

  <% if current_user.admin? %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Sensitive Information</h5>
        <p class="text-muted small">This information is encrypted and only visible to administrators.</p>
        <div class="row g-3 mt-2">
          <div class="col-md-6">
            <%= f.label :ssn, "Social Security Number", class: "form-label" %>
            <%= f.text_field :ssn, class: "form-control", placeholder: "XXX-XX-XXXX", pattern: "\\d{3}-?\\d{2}-?\\d{4}" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Summary</h5>
      <div class="mt-3">
        <%= f.text_area :summary, rows: 4, class: "form-control", placeholder: "Brief summary or notes about the candidate..." %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancel", candidates_path, class: "btn btn-outline-secondary" %>
    <%= f.submit candidate.persisted? ? "Update Candidate" : "Add Candidate", class: "btn btn-primary" %>
  </div>
<% end %>

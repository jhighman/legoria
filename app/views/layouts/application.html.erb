<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || PlatformBrand.name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light min-vh-100">
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom">
        <div class="container">
          <%= link_to PlatformBrand.name, root_path, class: "navbar-brand fw-bold text-primary" %>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <%= link_to "Dashboard", root_path, class: "nav-link #{current_page?(root_path) ? 'active fw-semibold' : ''}" %>
              </li>
              <li class="nav-item">
                <%= link_to "Jobs", jobs_path, class: "nav-link #{controller_name == 'jobs' ? 'active fw-semibold' : ''}" %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle <%= controller_path.start_with?('reports') ? 'active fw-semibold' : '' %>" href="#" role="button" data-bs-toggle="dropdown">
                  <i class="bi bi-bar-chart me-1"></i> Reports
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to reports_dashboard_path, class: "dropdown-item" do %>
                      <i class="bi bi-speedometer2 me-2"></i> Overview
                    <% end %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to reports_time_to_hire_index_path, class: "dropdown-item" do %>
                      <i class="bi bi-clock me-2"></i> Time to Hire
                    <% end %>
                  </li>
                  <li>
                    <%= link_to reports_sources_path, class: "dropdown-item" do %>
                      <i class="bi bi-diagram-3 me-2"></i> Source Effectiveness
                    <% end %>
                  </li>
                  <li>
                    <%= link_to reports_pipeline_index_path, class: "dropdown-item" do %>
                      <i class="bi bi-funnel me-2"></i> Pipeline Conversion
                    <% end %>
                  </li>
                  <li>
                    <%= link_to reports_operational_index_path, class: "dropdown-item" do %>
                      <i class="bi bi-activity me-2"></i> Operational
                    <% end %>
                  </li>
                  <% if current_user.admin? %>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                      <%= link_to reports_eeoc_index_path, class: "dropdown-item" do %>
                        <i class="bi bi-file-earmark-text me-2"></i> EEOC Report
                      <% end %>
                    </li>
                    <li>
                      <%= link_to reports_diversity_index_path, class: "dropdown-item" do %>
                        <i class="bi bi-pie-chart me-2"></i> Diversity Metrics
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </li>
              <% if current_user.admin? %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle <%= controller_path.start_with?('admin') ? 'active fw-semibold' : '' %>" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="bi bi-gear me-1"></i> Admin
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to admin_users_path, class: "dropdown-item" do %>
                        <i class="bi bi-people me-2"></i> Users
                      <% end %>
                    </li>
                    <li>
                      <%= link_to admin_roles_path, class: "dropdown-item" do %>
                        <i class="bi bi-shield me-2"></i> Roles
                      <% end %>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                      <%= link_to admin_lookup_types_path, class: "dropdown-item" do %>
                        <i class="bi bi-list-ul me-2"></i> Lookup Tables
                      <% end %>
                    </li>
                    <li>
                      <%= link_to admin_audit_logs_path, class: "dropdown-item" do %>
                        <i class="bi bi-shield-check me-2"></i> Audit Logs
                      <% end %>
                    </li>
                  </ul>
                </li>
              <% end %>
            </ul>

            <div class="d-flex align-items-center">
              <span class="text-muted me-3"><%= current_user.display_name %></span>
              <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary btn-sm" %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <main class="container py-4">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle me-2"></i>
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="bi bi-exclamation-circle me-2"></i>
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
